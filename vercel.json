{
  "version": 2,
  "rewrites": [{ "source": "/(.*)", "destination": "/api" }],
  "functions": {
    "api/index.js": {
      "maxDuration": 60
    },
    "api/workers/update-upcoming-events.worker.js": {
      "maxDuration": 300
    },
    "api/workers/update-events-results.worker.js": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/workers/update-upcoming-events.worker",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/workers/update-events-results.worker",
      "schedule": "0 0 * * *"
    }
  ]
}
